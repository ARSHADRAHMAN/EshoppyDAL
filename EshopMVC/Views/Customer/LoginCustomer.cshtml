
@{
    ViewBag.Title = "LoginCustomer";
    if(Session["CustEmail"] == null)
    {
        Layout ="~/Views/Shared/_Layout.cshtml";
    }
}

<h2>LoginCustomer</h2>
@using(Html.BeginForm()){

<table>
    <tr>
        <td>User Name</td>
        <td>@Html.TextBox("custEmail",null,htmlAttributes:new { required = "required" })</td>
    </tr>
    <tr>
        <td>Password</td>
        <td>@Html.Password("cPass")></td>
    </tr>
    <tr>
        <td><input type="submit" value="submit"/></td>
    </tr>

</table>
    <div>
        @ViewBag.Message
    </div>
}
