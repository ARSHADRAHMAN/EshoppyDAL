@model IEnumerable<EshopMVC.Models.Category>

@{
    ViewBag.Title = "ViewAllCategory";
}

<h2>ViewAllCategory</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryDescription)
        </td>
        <td>
            @Html.ActionLink("Edit", "UpdateCategory", new { catId=item.CategoryId }) |
            @Html.ActionLink("Details", "CategoryDetails", new { catId= item.CategoryId }) |
            @Html.ActionLink("Delete", "Delete", new { catId = item.CategoryId })
        </td>
    </tr>
}

</table>
